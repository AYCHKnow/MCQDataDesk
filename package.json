{
  "name": "Assessorator",
  "version": "0.7.1",
  "description": "An application designed manage multiple choice question banks, generate assessments and export in edX format.",
  "main": "main.js",
  "author": "Matt Lyons <matt@matt-lyons.net>",
  "scripts": {
    "start": "electron main.js",
    "pack": "build --dir",
    "dist": "build --windows --linux"
  },
  "dependencies": {
    "appdirectory": "~0.1.0",
    "md5": "~2.2.1",
    "mkdirp": "~0.5.1"
  },
  "devDependencies": {
    "electron": "^1.4.13",
    "electron-packager": "~7.7.0",
    "electron-builder": "~10.15.1",
    "devtron": "^1.3.0"
  },
  "builder": {
    "win": {
      "title": "Assessorator",
      "icon": "build/icon.ico",
      "version": "0.7.1",
      "publisher": "Matt Lyons <matt@matt-lyons.net>"
    }
  },
  "build": {
    "appId": "com.mattlyons.assessorator",
    "files": [
      "!exports${/*}",
      "!build${/*}"
    ],
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "linux": {
      "category": "Office"
    },
    "compression": "maximum"
  },
  "postinstall": "install-app-deps"
}
