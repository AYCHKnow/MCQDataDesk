{
  "name": "Assessorator",
  "version": "0.5.0",
  "description": "An application designed to generate assessments in edX format based on multiple choice questions.",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "pack": "electron-packager . Assessorator --all --out=bin --ignore=bin --asar --overwrite",
    "buildWindowsInstallerOld": "electron-builder bin/Assessorator-win32-x64 --platform=win --out=bin",
    "createInstaller": "grunt create-windows-installer"
  },
  "author": "Matt Lyons <matt@matt-lyons.net>",
  "dependencies": {
    "appdirectory": "~0.1.0",
    "mkdirp": "~0.5.1"
  },
  "devDependencies": {
    "electron-prebuilt": "^0.37.8",
    "electron-packager": "~7.0.1",
    "electron-builder": "~3.14.0",
    "grunt-electron-installer": "~2.1.0",
    "grunt": "~1.0.1"
  },
  "builder": {
    "win": {
      "title": "Assessorator",
      "icon": "icon.ico",
      "version": "0.1.0",
      "publisher": "Matt Lyons <matt@matt-lyons.net>"
    }
  }
}