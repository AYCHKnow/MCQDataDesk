{
  "name": "Assessorator",
  "version": "0.7.1",
  "description": "An application designed manage multiple choice question banks, generate assessments and export in edX format.",
  "main": "main.js",
  "author": "Matt Lyons <matt@matt-lyons.net>",
  "scripts": {
    "start": "electron main.js",
    "pack": "build --dir",
    "release": "build --windows --linux"
  },
  "dependencies": {
    "appdirectory": "~0.1.0",
    "md5": "~2.2.1",
    "mkdirp": "~0.5.1",
    "electron-auto-updater": "~1.0.0",
    "electron-window-state": "~4.0.1",
    "electron-log": "~1.3.0"
  },
  "devDependencies": {
    "electron-builder": "~11.4.4",
    "devtron": "^1.3.0"
  },
  "build": {
    "appId": "com.mattlyons.assessorator",
    "files": [
      "!exports${/*}",
      "!build${/*}"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "generic",
      "owner": "Matt Lyons",
      "url": "https://mattlyons.net/downloads/assessorator",
      "channel": "latest"
    },

    "win": {
      "target": "nsis"
    },
    "linux": {
      "category": "Office"
    }
  },
  "postinstall": "install-app-deps"
}
